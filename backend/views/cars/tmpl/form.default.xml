<form
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_MDCAR_COMMON_NORECORDS"
>
	<headerset>
		<header name="ordering" type="ordering" sortable="true" tdwidth="1%" />
		
		<header name="mdcar_car_id" type="rowselect" tdwidth="20" />
		
		<header name="kenteken" type="fieldsearchable" sortable="true"
			buttons="no" buttonclass="btn"
		/>
		
		<header name="merk" type="field" sortable="true"
			buttons="no" buttonclass="btn"
		/>
        <header name="type" type="field" sortable="true"
                buttons="no" buttonclass="btn"
                />
        <header name="kmstand_start" type="field" sortable="true"
                buttons="no" buttonclass="btn"
                />
        <header name="winterbandencorrectie" type="field" sortable="true"
                buttons="no" buttonclass="btn"
                />
        <!--
        <header name="totaalverbuik" type="field" sortable="true"
                buttons="no" buttonclass="btn"
                />
        <header name="gemverbruik" type="field" sortable="true"
                buttons="no" buttonclass="btn"
                />
        <header name="totaalbedrag" type="field" sortable="true"
                buttons="no" buttonclass="btn"
                />
-->
		<header name="access" type="accesslevel" sortable="true" />
		
		<header name="enabled" type="published" sortable="true" tdwidth="8%" />
	</headerset>

	<fieldset name="cars">
		<field name="ordering" type="ordering" labelclass="order"/>
		
		<field name="mdcar_car_id" type="selectrow"/>
		
		<field name="kenteken" type="text"
			show_link="true"
			url="index.php?option=com_mdcar&amp;view=car&amp;id=[CAR:ID]"
		 />
		 
		<field name="merk" type="field" />
        <field name="type" type="field" />
        <field name="kmstand_start" type="field" />
        <field name="winterbandencorrectie" type="field" />
        <!--
            <field name="totaalverbuik" type="text" />
            <field name="gemverbruik" type="text" />
            <field name="totaalbedrag" type="text" />
            -->
		<field name="access" type="accesslevel" />

		<field name="enabled" type="published"/>
	</fieldset>
</form>