<form>
	<fieldset name="basic_configuration" label="COM_MDCAR_CARS_GROUP_BASIC" >


        <field name="mdcar_car_id" type="hidden" />
        <field name="kenteken" type="text"
			label="COM_MDCAR_CARS_FIELD_KENTEKEN"
			description="COM_MDCAR_CARS_FIELD_KENTEKEN_DESC"
			class="input-xlarge"
			required="true"
		/>
		
		<field name="merk" type="text"
			label="COM_MDCAR_CARS_FIELD_MERK"
			description="COM_MDCAR_CARS_FIELD_MERK_DESC"
			class="input-large"
			required="true"
		/>
        <field name="type" type="text"
               label="COM_MDCAR_CARS_FIELD_TYPE"
               description="COM_MDCAR_CARS_FIELD_TYPE_DESC"
               class="input-large"
               required="true"
                />
        <field name="kmstand_start" type="text"
               label="COM_MDCAR_CARS_FIELD_KMSTAND"
               description="COM_MDCAR_CARS_FIELD_KMSTAND_DESC"
               class="input-large"
               required="true"
                />
        <field name="winterbandencorrectie" type="text"
               label="COM_MDCAR_CARS_FIELD_WINTERBANDENCORRECTIE"
               description="COM_MDCAR_CARS_FIELD_WINTERBANDENCORRECTIE_DESC"
               class="input-large"
               required="false"
                />

		<field name="access" type="accesslevel"
			label="COM_MDCAR_CARS_FIELD_ACCESS"
			description="COM_MDCAR_CARS_FIELD_ACCESS_DESC"
			required="true"
		/>

		<field name="enabled" type="list" label="JSTATUS"
			labelclass="todo-label"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
</form>